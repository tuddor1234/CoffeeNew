<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".components.fragments.CoffeePickerFragment">

    <ImageView
        android:id="@+id/frag_small_coffee_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:contextClickable="true"
        android:onClick="registerCoffee"
        android:src="@drawable/ic_fsmall_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:5"
        app:layout_constraintHeight_percent=".33"

        app:layout_constraintStart_toStartOf="@+id/frag_medium_coffee_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/frag_medium_coffee_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:contextClickable="true"
        android:onClick="registerCoffee"
        android:src="@drawable/ic_fmedium_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:5"
        app:layout_constraintHeight_percent=".33"

        app:layout_constraintStart_toStartOf="@+id/frag_large_coffee_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/frag_large_coffee_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contextClickable="true"
        android:onClick="registerCoffee"
        android:src="@drawable/ic_flarge_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:5"
        app:layout_constraintHeight_percent=".33"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:5"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".33"
        app:layout_constraintStart_toEndOf="@+id/frag_small_coffee_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/frag_small_coffee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/frag_small_coffee_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caffeine: 100 mg"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:5"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".33"
        app:layout_constraintStart_toEndOf="@+id/frag_small_coffee_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">


        <TextView
            android:id="@+id/frag_medium_coffee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/frag_medium_coffee_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caffeine: 200 mg"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:5"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".33"
        app:layout_constraintStart_toEndOf="@+id/frag_small_coffee_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/frag_large_coffee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee_large"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/frag_large_coffee_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caffeine: 300 mg"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>